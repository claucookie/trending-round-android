<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="Theme.Trendinground" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_trendinground</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Trendinground</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Trendinground</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Trendinground</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Trendinground</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Trendinground</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_trendinground</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_trendinground</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Trendinground</item>
        
                <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Trendinground.Widget</item>

    </style>

    <style name="ActionBar.Solid.Trendinground" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_trendinground</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_trendinground</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_trendinground</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Trendinground</item>
    </style>

    <style name="ActionBar.Transparent.Trendinground" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/ab_transparent_trendinground</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Trendinground</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Trendinground.Widget" parent="@style/Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenu.Trendinground</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Trendinground</item>
    </style>

</resources>
