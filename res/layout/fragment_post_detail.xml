<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PostDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/posts_lists_background_color"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/posts_list_background_shape"
        android:orientation="vertical" 
        android:padding="10dp">

        <TextView
            android:id="@+id/fpd_title"
            style="@style/PostDetailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post detail" />

        <TextView
            android:id="@+id/fpd_date"
            style="@style/PostDetailDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="22/12/2013" />
        
        
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/posts_list_item_separator_color" ></View>

        <WebView
            android:id="@+id/fpd_content_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:padding="0dp" />
    </LinearLayout>

</RelativeLayout>