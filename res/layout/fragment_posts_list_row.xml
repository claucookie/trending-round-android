<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="0dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/posts_list_background_shape"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/fpl_row_title"
            style="@style/PostsListRowText1"
            android:text="Bye bye sweet summer" />

        <TextView
            android:id="@+id/fpl_row_desc"
            style="@style/PostsListRowText2"
            android:layout_marginTop="3dp"
            android:text="Blablabla esto es un post del blog de prueba 単a単a単a単a ejje" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/posts_list_item_separator_color" >
        </View>

        <TextView
            android:id="@+id/fpl_row_date"
            style="@style/PostsListRowDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/12/2013" />
    </LinearLayout>

</RelativeLayout>